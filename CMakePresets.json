{
    "version": 3,
    "configurePresets": [
        {
            "name": "default",
            "generator": "Ninja",
            "binaryDir": "${sourceDir}/build",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            },
            "environment": {
                "BUILD_DIR": "/home/vscode/eacces-modifier/build",
                "MACKER_REL_PATH": "Macker/macker/Macker.so",
                "PERMOD_REL_PATH": "Permod/permod/PermodPass.so"
            }
        },
        {
            "name": "kernel",
            "inherits": "default",
            "binaryDir": "${sourceDir}/build-kernel",
            "cacheVariables": {
                "KERNEL_MODE": "1"
            },
            "environment": {
                "BUILD_DIR": "/home/vscode/eacces-modifier/build-kernel",
                "MACKER_REL_PATH": "Macker/macker/Macker.so",
                "PERMOD_REL_PATH": "Permod/permod/PermodPass.so"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "default",
            "configurePreset": "default"
        },
        {
            "name": "kernel",
            "configurePreset": "kernel"
        }
    ]
}